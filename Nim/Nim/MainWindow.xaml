<Window x:Class="Nim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nim"
        mc:Ignorable="d"
        Title="Game Of Nim" Height="350" Width="525" Background="DarkRed">
    <StackPanel>
        <Label HorizontalAlignment="Center" Margin="0,20,0,0" FontWeight="Bold" FontSize="35" Foreground="Yellow" Content="Nim"/>
        <Button Width="200" Height="50" HorizontalAlignment="Center" Margin="0,15,0,5" Foreground="Yellow" BorderThickness="1" BorderBrush="Yellow" Background="DarkRed" Click="StartGameButton" Content="New Game"/>
        <Button Width="200" Height="50" HorizontalAlignment="Center" Margin="0,15,0,5" Foreground="Yellow" BorderThickness="1" BorderBrush="Yellow" Background="DarkRed" Click="InstructionsButton" Content="How To Play"/>
        <Button Width="200" Height="50" HorizontalAlignment="Center" Margin="0,15,0,10" Foreground="Yellow" BorderThickness="1" BorderBrush="Yellow" Background="DarkRed" Click="ExitGame" Content="Exit Game"/>
    </StackPanel>
</Window>

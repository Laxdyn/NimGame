<Window x:Class="Nim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nim"
        mc:Ignorable="d"
        Title="Game Of Nim" Height="350" Width="525">
    <StackPanel>
        <Button Width="200" Height="75" Margin="10" Click="StartGameButton">New Game</Button>
        <Button Width="200" Height="75" Margin="10" Click="InstructionsButton">How To Play</Button>
        <Button Width="200" Height="75" Margin="10" Click="ExitGame">Exit Game</Button>
    </StackPanel>
</Window>

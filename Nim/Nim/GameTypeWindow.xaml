<Window x:Class="Nim.GameTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nim"
        mc:Ignorable="d"
        Title="Game Of Nim" Height="350" Width="525">
    <StackPanel Background="DarkRed">
        <Button Margin="10,10,0,0" HorizontalAlignment="Left" Width="60" Height="30" Content="Back" Click="BackToDifficulty"/>
        <StackPanel>
            <Label HorizontalAlignment="Center" Margin="0,20,0,0" FontWeight="Bold" FontSize="35" Foreground="Yellow" Content="Select Type"/>
            <Button Width="200" Height="50" HorizontalAlignment="Center" Margin="0,15,0,5" Foreground="Yellow" BorderThickness="1" BorderBrush="Yellow" Background="DarkRed" Click="PvP" Content="Player vs Player"/>
            <Button Width="200" Height="50" HorizontalAlignment="Center" Margin="0,15,0,5" Foreground="Yellow" BorderThickness="1" BorderBrush="Yellow" Background="DarkRed" Click="PvC" Content="Player vs Computer"/>
        </StackPanel>
    </StackPanel>
</Window>

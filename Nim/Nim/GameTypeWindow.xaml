<Window x:Class="Nim.GameTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nim"
        mc:Ignorable="d"
        Title="Game Of Nim" Height="350" Width="525">
    <StackPanel>
        <Button HorizontalAlignment="Left" Width="100" Height="50" Content="Back" Click="BackToDifficulty"/>
        <StackPanel>
            <Button Width="200" Height="75" Margin="20" Click="PvP" Content="PvP"/>
            <Button Width="200" Height="75" Margin="20" Click="PvC" Content="PvC"/>
        </StackPanel>
    </StackPanel>
</Window>

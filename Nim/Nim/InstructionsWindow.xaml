<Window x:Class="Nim.InstructionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nim"
        mc:Ignorable="d"
        Title="Game Of Nim" Height="350" Width="525" Background="DarkRed">
    <StackPanel>
        <Button Width="60" Height="30" Content="Back" Click="BackToMainMenu" Margin="10,10,0,0" HorizontalAlignment="Left"/>
        <StackPanel>
            <Label HorizontalAlignment="Center" FontWeight="Bold" FontSize="25" Foreground="Yellow" Content="HOW TO PLAY"/>
            <TextBox x:Name="textBox" HorizontalContentAlignment="Center" Height="175" Margin="50,20,50,20" FontSize="18" TextWrapping="Wrap" 
                     Text="Nim is played with piles of various numbers of pieces. Players take turns picking one of the piles and removing pieces. Once the pile is picked, that is the only pile the players can choose from until their next turn. Whichever player takes the last piece loses." 
                     BorderThickness="1" BorderBrush="Yellow" Background="DarkRed" Foreground="Yellow"/>
        </StackPanel>
            </StackPanel>
</Window>
